<!doctype html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">
  <meta name="description" content="Administrative System">
  <meta name="author" content="DX Suporte - Danilo Xavier">
  <meta name="generator" content="visual studio code">
  <meta name="keywords" content="electron, adonisjs, nodejs, bootstrap">
  <title>Deskae</title>

  <!-- Google Fonts -->
  <link
    href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Roboto:300,300i,400,400i,500,500i,600,600i,700,700i|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i"
    rel="stylesheet">
  <!-- Bootstrap core CSS -->
  <link rel="stylesheet" type="text/css" href="{{myUrl}}/vendor/bootstrap/css/bootstrap.min.css">
  <!-- Aos -->
  <link rel="stylesheet" type="text/css" href="{{myUrl}}/vendor/aos/aos.css">
  <!-- IcoFont -->
  <link rel="stylesheet" type="text/css" href="{{myUrl}}/vendor/icofont/icofont.min.css">
  <!-- APP CSS -->
  <link rel="stylesheet" type="text/css" href="{{myUrl}}/css/app.css">

  <!--Jquery -->
  <script src="{{myUrl}}/vendor/jquery/jquery.min.js"></script>
</head>

<body class="text-white bg-dark">


  <div class="d-flex justify-content-center mt-5">
    <div class="h-auto d-inline-block mt-5" style="min-width: 60%;">
      <div class="card text-white bg-dark m-5">
        <form action="/login" method="post">
          {{ csrfField() }}
          <div class="card-body mt-5">
            <div class="form-row">
              <div class="form-group col-lg-6">
                <input type="email" name="email" value="{{flashMessages.get('email') || ''}}" placeholder="Email..."
                  required
                  class="form-control form-control-lg {{flashMessages.has('errors.email') ? 'is-invalid' : ''}}">
                <div class="invalid-feedback">
                  {{flashMessages.get('errors.email')}}
                </div>
              </div>
              <div class="form-group col-lg-6">
                <input type="password" name="password" placeholder="Senha..." required
                  class="form-control form-control-lg {{flashMessages.has('errors.password') ? 'is-invalid' : ''}}">
                <div class="invalid-feedback">
                  {{flashMessages.get('errors.password')}}
                </div>
              </div>
            </div>
            <div class="form-group col-lg-4">
              <div class="form-group form-check ml-2">
                <input type="checkbox" name="rememberMe" value="1" class="form-check-input">
                <label class="form-check-label" for="rememberMe">Mantenha-me conectado</label>
              </div>
            </div>
            <div class="form-group text-right">
              <button type="submit" title="LOGIN" class="btn btn-primary">
                <i class="icofont-login"></i> Login
              </button>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>

  <footer class="mt-auto bg-dark py-3">
    <div class="text-center">
      <div class="ml-2">
        Copyright &copy; {{myAno}} <strong>{{auth.user ? myEmitente.nf : ''}}.</strong>
        <i> Desenvolvido por</i>
        <a href="http://dxsuporte.com.br/" target="_blank">DX Suporte</a>
      </div>
    </div>
  </footer>

  <!--Bootstrap -->
  <script src="{{myUrl}}/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
  <!-- oas Files -->
  <script src="{{myUrl}}/vendor/aos/aos.js"></script>

</body>

</html>